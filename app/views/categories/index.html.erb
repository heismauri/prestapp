<h1>Todas las categorías</h1>
<section class="categories">
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-6">
      <div class="card mb-4">
        <%= cl_image_tag category.picture.key, class: "card-img-top", alt: "#{category.name}", width: 600, height: 300, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <%= link_to 'Ver más', category_path(category), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
