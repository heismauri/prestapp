<div class="medium-banner shadow-sm rounded-bottom text-white"
  style="--banner-image: url('https://source.unsplash.com/HYQvV8wWX18/1110x180')">
  <h1>Todas las categorías</h1>
</div>

<section class="categories my-4">
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-6">
      <div class="card mb-4">
        <%= cl_image_tag category.picture.key, class: "card-img-top", alt: "#{category.name}", width: 600, height: 300, crop: :fill %>
        <div class="card-body">
          <h4 class="card-title"><%= category.name %><small class="text-muted fs-1"> ( <%= pluralize(category.articles.length," articulo") %> )</small></h4>
          <%= link_to 'Visitar categoría', category_path(category), class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
