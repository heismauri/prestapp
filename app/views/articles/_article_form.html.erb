<div class="col-md-8 mx-auto">
  <%= simple_form_for(@article) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 8 } %>
  <div class="row">
    <div class="col-6">
      <%= f.input :price %>
    </div>
    <div class="col-6">
      <%= f.association :category, as: :select %>
    </div>
  </div>
  <%= f.input :picture, as: :file, input_html: { class: "form-control" } %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
