<div class="col-md-8 mx-auto p-3">
  <%= simple_form_for(@article) do |f| %>
    <strong><%= f.input :name, label: "Nombre del Articulo:", placeholder: "Mínimo 5 caracteres" %></strong>
    <strong> <%= f.input :description, label: "Descripción:", placeholder: "Describe en forma detallada, características y estado de tu producto. (Mínimo 25 caracteres)", input_html: { rows: 8 } %></strong>
    <div class="row">
      <div class="col-6">
        <strong><%= f.input :price, label: "Precio:", placeholder: "Mínimo $1000" %></strong>
      </div>
      <div class="col-6">
        <strong><%= f.association :category, label: "Categoría:", as: :select %></strong>
      </div>
    </div>
    <strong><%= f.input :picture, label: "Imagen del producto:", as: :file, input_html: { class: "form-control" } %></strong>
    <% if @article.id.nil?  %>
      <%= f.submit "Crear Articulo", class: "btn btn-outline-primary btn-block" %>
    <% else %>
      <%= f.submit "Actualizar Articulo", class: "btn btn-outline-primary btn-block" %>
    <% end %>
  <% end %>
</div>
