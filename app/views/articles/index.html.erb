<div class="medium-banner shadow-sm rounded-bottom text-white"
  style="--banner-image: url('https://source.unsplash.com/BNBA1h-NgdY/1110x180')">
  <h1>Mis artÃ­culos</h1>
</div>

<section class="articles">
  <div class="row py-4">
    <% unless @articles.blank? %>
    <% @articles.each do |result| %>
    <div class="col-12 col-lg-6">
      <div class="card mb-4 shadow-sm">
        <div class="card-horizontal">
          <div class="img-square-wrapper">
            <%= cl_image_tag result.picture.key, alt: "#{result.name}", width: 150, height: 150, crop: :fill %>
          </div>
          <div class="card-body">
            <h5 class="font-weight-bold"><%= link_to result.name, article_path(result) %></h5>
            <h6><%= result.formatted_price %></h6>
            <div class="card-buttons">
              <%= link_to article_path(result) do %>
              <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_article_path(result) do %>
              <i class="fas fa-pencil-alt ml-1"></i>
              <% end %>
              <%= link_to article_path(result), class: "text-danger", method: :delete, data: { confirm: "Â¿EstÃ¡s seguro de eliminar #{result.name}?" } do %>
              <i class="fas fa-trash-alt ml-1"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
  <div class="col-12">
  <div class="card rounded-sm shadow-sm">
    <div class=" p-4">
      <h2 class="display-5 text-center w-100 m-2">No tienes articulos publicados ðŸ˜¥</h1>
    </div>
    <%= link_to "Quiero generar ingresos", new_article_path, class: "mx-4 mb-4 btn btn-primary" %>
    <%= link_to "Volver al inicio", root_path, class: "mx-4 mb-4 btn btn-outline-primary" %>
  </div>
  </div>
  <% end %>
  </div>
</section>
