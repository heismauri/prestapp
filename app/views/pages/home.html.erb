<section class="articles">
  <div class="row py-4">
    <div class="section-header px-3">
      <h2>Ãšltimos productos disponibles:</h2>
    </div>

    <% @articles.each do |result| %>
    <div class="col-4 mt-3">
      <div class="card rounded-sm shadow-sm">
        <%= cl_image_tag result.picture.key, class: "card-img-top", alt: "#{result.name}", width: 500, height: 300, crop: :fill %>

        <div class="card-body">
          <h5 class="card-title font-weight-bold text-center"><%= link_to result.name, article_path(result) %></h5>
          <p class="card-text text-end"><%= result.formatted_price %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>

<section class="categories">
  <div class="row py-4 d-flex justify-content-around">
    <div class="section-header px-3">
      <h2 class="text-center">Categorias que pueden interesarte...</h2>
    </div>

    <% @categories.each do |result| %>
    <div class="col-6 mt-3">
      <div class="card-category mt-4"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path result.picture.key, width: 600, height: 400, crop: :fill %>')">
        <%#= link_to result.name, category_path(result) %>
        <%= link_to "Visitar categoria #{result.name}", category_path(result), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</section>
