<div class="row py-4">
  <% @orders.each do |order| %>
  <div class="col-md-6">
    <div class="card rounded-sm shadow-sm mb-4">
      <div class="card-body">
        <p><em class="text-muted">Order date:</em> <%= order.updated_at %></p>
        <p><em class="text-muted">Order status:</em> <%= order.status.capitalize %></p>
      </div>
      <hr class="m-0">
      <div class="card-body pb-0">
        <div class="d-flex mb-4">
          <%= cl_image_tag order.order_items.first.article.picture.key, class: "img-thumbnail", alt: "", width: 100, height: 100, crop: :fill %>
          <div class="flex-grow-1 p-2">
            <p class="m-0"><%= order.order_items.first.article.name %></p>
            <p><small class="text-muted"><%= order.order_items.first.article.category.name %></small></p>
            <p><%= order.order_items.first.article.formatted_price %></p>
          </div>
        </div>
        <%= link_to "Ver mas detalles", order_path(order), class: "btn btn-primary float-right mb-4"%>
      </div>
      <hr class="m-0">
      <div class="card-body">
        <p><em class="text-muted">Order items:</em> <%= order.total_items %></p>
        <p><em class="text-muted">Total:</em> <%= order.formatted_total %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
