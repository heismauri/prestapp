<div class="py-4">
  <% @orders.each do |order| %>
  <div class="card rounded-sm shadow-sm mb-4">
    <div class="card-body">
      <p><em class="text-muted">Order date:</em> <%= order.updated_at %></p>
      <p><em class="text-muted">Order ID:</em> <%= order.id %></p>
      <p><em class="text-muted">Order status:</em> <%= order.status.capitalize %></p>
    </div>
    <hr class="m-0">
    <div class="row pt-4 px-4">
      <% order.order_items.each do |item| %>
      <div class="col-md-6 col-lg-4 d-flex mb-4">
        <%= cl_image_tag item.article.picture.key, class: "img-thumbnail", alt: "", width: 100, height: 100, crop: :fill %>
        <div class="flex-grow-1 p-2">
          <p class="m-0"><%= item.article.name %></p>
          <p><small class="text-muted"><%= item.article.category.name %></small></p>
          <p><%= item.article.formatted_price %></p>
        </div>
      </div>
      <% end %>
    </div>
    <hr class="m-0">
    <div class="card-body">
      <p><em class="text-muted">Order items:</em> <%= order.total_items %></p>
      <p><em class="text-muted">Total:</em> <%= order.formatted_total %></p>
    </div>
  </div>
  <% end %>
</div>
