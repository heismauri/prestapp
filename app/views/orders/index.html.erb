<div class="medium-banner shadow-sm rounded-bottom text-white"
  style="--banner-image: url('https://source.unsplash.com/snNHKZ-mGfE/1110x180')">
  <h1>Mis Ordenes:</h1>
</div>

<div class="py-4">
    <% unless @orders.blank? %>
  <% @orders.each do |order| %>
  <div class="card rounded-sm shadow-sm mb-4">
    <div class="card-body">
      <p><em class="text-muted">Fecha de la orden:</em> <%= order.updated_at %></p>
      <p><em class="text-muted">NÃºmero de seguimiento:</em> <%= order.id %></p>
      <p><em class="text-muted">Estado de la orden:</em> <strong class="badge bg-primary text-wrap"
          style="width: 6rem;"><%= order.status.capitalize %></p></strong>
    </div>
    <hr class="m-0">
    <div class="row pt-4 px-4">
      <% order.order_items.each do |item| %>
      <div class="col-md-6 col-lg-4 d-flex mb-4">
        <%= cl_image_tag item.article.picture.key, class: "img-thumbnail", alt: "", width: 100, height: 100, crop: :fill %>
        <div class="flex-grow-1 p-2">
          <p class="m-0"><%= item.article.name %></p>
          <p><small class="text-muted"><%= item.article.category.name %></small></p>
          <p><%= item.article.formatted_price %></p>
        </div>
      </div>
      <% end %>
    </div>
    <hr class="m-0">
    <div class="card-body">
      <p><em class="text-muted">Order items:</em> <%= order.total_items %></p>
      <p><em class="text-muted">Total:</em> <%= order.formatted_total %></p>
    </div>
  </div>
  <% end %>
    <% else %>
  <div class="card rounded-sm shadow-sm">
    <div class=" p-4">
      <h2 class="display-5 text-center w-100 m-2">No tienes ordenes activas</h1>
    </div>
    <%= link_to "Quiero generar ingresos", new_article_path, class: "mx-4 mb-4 btn btn-primary" %>
    <%= link_to "Quiero ahorrar", categories_path, class: "mx-4 mb-4 btn btn-outline-primary" %>
  </div>
  <% end %>
</div>
